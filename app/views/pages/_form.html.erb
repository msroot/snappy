<%= form_for(page) do |f| %>
  <% if page.errors.any? %>
    <div id="error_explanation" class="alert alert-warning" role="alert">
      <ul>
      <% page.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<hr />
  
<p>Drag this 
<a class="btn btn-success" style="cursor: move;" href="javascript:(function(){window.location = 'https://snappy.herokuapp.com/pages/new?url=' + encodeURIComponent(window.location.href);})();"/>Add to Snappy
</a>
bookmarklet to your favorites and click when you are in a facebook page
</p>
<hr />

<div class="form-group">
    <%= f.label "Facebook Page URL:"%>
    <%= 
		f.text_field :origin_url, 
		class: "form-control", 
		placeholder: "https://www.facebook.com/example_page", 
		type: :url , 
		value: params[:url], 
		pattern: "^https:\/\/www.facebook.com\/(.*)$", 
		title: "Should be a valid facebook page url"
 %>

  </div>

<div class="form-group">
    <%= f.submit 'Add new page', class: "btn btn-success" %>
  </div>
<% end %>



<% if params[:url] %>
<script type="text/javascript">
$(function () {
	$("#new_page").submit()
})
</script> 
<% end %>
