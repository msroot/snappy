<p id="notice"><%= notice %></p>

<div class="event-cover" style="text-align: center; background-image: url('<%= @event.cover_url %>'); background-position: <%= "#{@event.cover_offset_x}%" %> <%= "#{@event.cover_offset_y}%" %>;">

</div>

<hr />
<h4><%= @event.name %> 

<% if @event.place%>
	<small>at <%= @event.place.name %></small>
<% end %>

</h4>
<hr />



<p>
  <%= @event.description %>
</p>

<p>
  <strong>Start at:</strong>
  <%= @event.start_time %>
</p>

<p>
  <strong>End at:</strong>
  <%= @event.end_time %>
</p>

<p>
 <strong>Event created from:</strong>
  <%=link_to @event.page.name, @event.page %>
</p>

<%if @event.place %>
<p>
  <strong>Address:</strong>
  <%= @event.address%>
</p>


<iframe width="100%" height="100%" scrolling="yes" style="border: none;" marginheight="0" marginwidth="0" src="https://www.google.com/maps?ie=UTF8&amp;q=<%= @event.address %>&amp;output=embed">
</iframe>

<%end%>
<p>
  <%= link_to "View on Facebook", @event.facebook_link, class: "btn btn-primary btn-block" %>
</p>

<%= link_to 'Back', events_path %>
