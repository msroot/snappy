<div id="carousel-snappy" class="carousel slide" data-ride="carousel">
	<ol class="carousel-indicators">
		<% events.each_with_index do |e, i| %>
		<li data-target="#carousel-snappy" data-slide-to="<%= i %>" class="<%= "active"  if 0 == i%>"></li>
		<% end %>
		
	</ol>
	<div class="carousel-inner" role="listbox">
		<% events.each_with_index do |e, i| %>
		
			<div class="carousel-item <%= "active"  if 0 == i%>">
				<%= link_to e do %>			
			<div class="event-cover" style="text-align: center; background-image: url('<%= e.cover_url %>'); background-position: <%= "#{e.cover_offset_x}%" %> <%= "#{e.cover_offset_y}%" %>;">
			</div>				
			
			<div class="carousel-caption">
				<p><%= "#{e.name rescue ''} (#{e.place.name rescue ''})"%></p>
			</div>
			<% end %>
		</div>
		
		<% end %>
    


	</div>
	<a class="left carousel-control" href="#carousel-snappy" role="button" data-slide="prev">
		<span class="icon-prev" aria-hidden="true"></span>
		<span class="sr-only">Previous</span>
	</a>
	<a class="right carousel-control" href="#carousel-snappy" role="button" data-slide="next">
		<span class="icon-next" aria-hidden="true"></span>
		<span class="sr-only">Next</span>
	</a>
</div>


<script type="text/javascript">
$(function () {
  $('.carousel').carousel()
})
</script>